<modelVersion>4.0.0</modelVersion>
<groupId>com.mydevops</groupId>
<artifactId>sample-webapp</artifactId>
<version>1.0-SNAPSHOT</version>
<packaging>jar</packaging> <!-- ðŸ”´ Changed from war to jar -->

<parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>2.7.18</version> <!-- or latest compatible -->
</parent>

<dependencies>
    <!-- Web Starter (comes with embedded Tomcat) -->
    <dependency>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Optional: if you had JSP/Servlet features -->
    <dependency>
        <groupId>org.apache.tomcat.embed</groupId>
        <artifactId>tomcat-embed-jasper</artifactId>
    </dependency>
</dependencies>

<build>
    <plugins>
        <!-- Spring Boot plugin for executable jar -->
        <plugin>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-maven-plugin</artifactId>
        </plugin>
    </plugins>
</build>
